<form action="/records" method="POST">
  <div class="row text-center mb-3">
    <div class="col-4">*必填欄位</div>
    <div class="col-4">請輸入你的支出</div>
  </div>
  <div class="form-group">
    <div class="row text-center mb-3">
      <div class="col-4">名稱*：</div>
      <div class="col-4">
        <input type="text" name="name" required>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row text-center mb-3">
      <div class="col-4">日期*：</div>
      <div class="col-4">
        <input type="date" name="date" style="width:182px;" required>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row text-center mb-3">
      <div class="col-4">類別*：</div>
      <div class="col-4">
        <select id="category" name="category" style="width:182px;" required>
          <option>家居物業</option>
          <option>交通出行</option>
          <option>休閒娛樂</option>
          <option>餐飲食品</option>
          <option>其他</option>
        </select>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row text-center mb-5">
      <div class="col-4">金額*：</div>
      <div class="col-4">
        <input type="number" name="amount" min="0" required>
      </div>
    </div>
  </div>
  <div class="text-center">
    <button type="submit" class="btn btn-outline-dark">新增支出</button>
  </div>
</form>