<form action="/records/{{record._id}}?_method=PUT" method="POST">
  <div class="row text-center mb-3">
    <div class="col-4">*必填欄位</div>
    <div class="col-4">請修改你的支出</div>
  </div>
  <div class="form-group">
    <div class="row text-center mb-3">
      <div class="col-4">名稱*：</div>
      <div class="col-4">
        <input type="text" name="name" placeholder="name" value="{{record.name}}" required>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row text-center mb-3">
      <div class="col-4">日期*：</div>
      <div class="col-4">
        <input type="date" name="date" value="{{record.date}}" style="width:182px;" required>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row text-center mb-3">
      <div class="col-4">類別*：</div>
      <div class="col-4">
        <select id="category" name="category" style="width:182px;" required>
          <option {{#isEquals record.category '家居物業'}}selected{{/isEquals}}>家居物業</option>
          <option {{#isEquals record.category '交通出行'}}selected{{/isEquals}}>交通出行</option>
          <option {{#isEquals record.category '休閒娛樂'}}selected{{/isEquals}}>休閒娛樂</option>
          <option {{#isEquals record.category '餐飲食品'}}selected{{/isEquals}}>餐飲食品</option>
          <option {{#isEquals record.category '其他'}}selected{{/isEquals}}>其他</option>
        </select>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row text-center mb-5">
      <div class="col-4">金額*：</div>
      <div class="col-4">
        <input type="number" name="amount" min="0" value="{{record.amount}}" required>
      </div>
    </div>
  </div>
  <div class="text-center">
    <button type="submit" class="btn btn-outline-dark">修改支出</button>
  </div>
</form>