<form action="/records/{{record._id}}?_method=PUT" method="POST">
  <div class="row">
    <div class="col-4">*必填欄位</div>
    <div class="col-8">請修改你的支出</div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-4">名稱*：</div>
      <div class="col-8">
        <input type="text" name="name" placeholder="name" value="{{record.name}}" required>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-4">日期*：</div>
      <div class="col-8">
        <input type="date" name="date" value="{{record.date}}" required>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-4">類別*：</div>
      <div class="col-8">
        <select id="category" name="category" value="{{record.category}}" required>
          <option>家居物業</option>
          <option>交通出行</option>
          <option>休閒娛樂</option>
          <option>餐飲食品</option>
          <option>其他</option>
        </select>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-4">金額*：</div>
      <div class="col-8">
        <input type="number" name="amount" min="0" value="{{record.amount}}" required>
      </div>
    </div>
  </div>
  <div class="text-center">
    <button type="submit">修改支出</button>
  </div>
</form>