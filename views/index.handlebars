<div class="row">
  <div class="col-12 text-center">
    <div class="btn-group">
      <button class="btn btn-outline-dark btn-lg dropdown-toggle" type="button" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false">
        類別
      </button>
      <div class="dropdown-menu">
        <a class="dropdown-item" href="/?sort=家居物業">家居物業</a>
        <a class="dropdown-item" href="/?sort=交通出行">交通出行</a>
        <a class="dropdown-item" href="/?sort=休閒娛樂">休閒娛樂</a>
        <a class="dropdown-item" href="/?sort=餐飲食品">餐飲食品</a>
        <a class="dropdown-item" href="/?sort=其他">其他</a>
      </div>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-12 text-center">
    總金額：
    <span class="ml-3" style="font-size: 100px; color: #ff8225">{{totalAmount}}</span>
  </div>
</div>

<ul class="list-group">
  {{#each records}}
  <li class="list-group-item">
    <div class="row">
      <div class="col-8">
        <div class="d-flex justify-content-between">
          <div class="details d-flex">
            {{#renderIcon this.category}}{{/renderIcon}}
            <div class="d-flex flex-column">
              <div class="div">{{this.name}}</div>
              <div class="div">{{this.date}}</div>
            </div>
          </div>
          <div class="price d-flex align-items-center">
            {{this.amount}}
          </div>
        </div>
      </div>
      <div class="col-4 text-right">
        <a href="/records/{{this._id}}/edit" class="btn btn-outline-dark">修改</a>
        <form action="/records/{{this._id}}?_method=DELETE" method="POST" style="display: inline">
          <button type="submit" class="btn btn-outline-danger">刪除</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>

<div class="text-center mt-5">
  <a href="/records/new" class="btn btn-outline-dark">新增支出</a>
</div>